@model DBDominio.Morador
@{
    ViewBag.Title = "Cadastro de Morador";
}

<h2>Cadastro de Morador</h2>

<h3>Você tem certeza que quer excluir este Morador ?</h3>
<div>
    <h4>Morador</h4>
    <hr />
    <dl class="dl-horizontal">
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.MoradorId)

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Unidade.BlocoUnidade)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Unidade.BlocoUnidade)
            </dd>
        </dl>

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-primary" />
            @Html.ActionLink("Voltar", "Index", "Morador", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
